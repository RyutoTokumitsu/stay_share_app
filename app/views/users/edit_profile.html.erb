<div class="UserContainer">
  <div>
    <ul class="SideNavigation">
      <li class="SideNavigation_item"><%= link_to 'アカウント', show_account_user_path(@user) %>
      <li class="SideNavigation_item"><%= link_to 'プロフィール', show_profile_user_path(@user) %>
    </ul>
  <div>
</div>

<h3>プロフィール</h3>
<%= form_with model:@user do |f| %>
  <table>
    <tr>
      <th><%= f.label :profile_image, "アイコン画像" %></th>
      <td><%= f.file_field :profile_image, autocomplete:"profile_image", placeholder: "画像" %></td>
    </tr>
    <tr>
      <th><%= f.label :name, "名前" %></th>
      <td><%= f.text_field :name, autocomplete:"name", placeholder: "名前を入力" %></td>
    </tr>
    <tr>
      <th><%= f.label :profile, "自己紹介" %></th>
      <td><%= f.text_area :profile, autocomplete:"profile", placeholder: "自己紹介を入力" %></td>
    </tr>
  </table>
  <ul>
    <li><%= f.submit "保存" %></li>
  </ul>
<% end %>

<%= link_to '・アカウント設定に戻る', show_profile_user_path(@user) %>